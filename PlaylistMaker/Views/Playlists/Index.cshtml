@{
  Layout = "_Layout";
}

@using PlaylistMaker.Models;

<h2>Playlists</h2>

@if (@Model.Count == 0)
{
  <h3>No playlists have been created yet!</h3>
} 
else
{
  <ul>
    @foreach (Playlist playlist in Model)
    {
      <li>@Html.ActionLink($"{playlist.Name}", "Details", new { id = playlist.PlaylistId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Create new playlist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>