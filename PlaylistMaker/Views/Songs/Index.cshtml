@{
  Layout = "_Layout";
}

@using PlaylistMaker.Models;
@model List<PlaylistMaker.Models.Song>;

<h2>Songs</h2>

@if (@Model.Count == 0)
{
  <h3>No songs have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Song song in Model)
  {
    <li>@Html.ActionLink($"{song.Title}", "Details", new { id = song.SongId }) | @song.Playlist.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add new song", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>